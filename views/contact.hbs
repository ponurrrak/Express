<h2>Contact me</h2>
{{#if isError}}
  <div class="isError">
    You can't leave fields empty!
  </div>
{{/if}}
{{#if isSent}}
  <div class="isSent">
    The message has been sent! File {{filename}} has been saved!
  </div>
  <image class="isSentImage" src="/upload/{{savedFilename}}">
{{/if}}
<form action="/contact/send-message" method="post" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
   <label>
    Project design: <input type="file" accept=".png, .jpeg, .jpg, .gif" name="image">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>
